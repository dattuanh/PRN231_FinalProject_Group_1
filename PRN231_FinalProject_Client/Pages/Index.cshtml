@page
@model PRN231_FinalProject_Client.Pages.IndexModel
@{
}

<div class="row h-100">
    <div class="col-lg-4 col-md-6 d-flex">
        <!-- small box -->
        <div class="small-box bg-info flex-fill">
            <div class="inner">
                <h3>Total Income</h3>
                <p>@Model.TotalIncome.ToString("C",new System.Globalization.CultureInfo(Model.culture))</p>
            </div>
            <div class="icon">
                <i class="bi bi-cash-coin"></i>
            </div>
            <a href="/Incomes" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-4 col-md-6 d-flex">
        <!-- small box -->
        <div class="small-box bg-success flex-fill">
            <div class="inner">
                <h3>Total Expense</h3>
                <p>@Model.TotalExpense.ToString("C",new System.Globalization.CultureInfo(Model.culture))</p>
            </div>
            <div class="icon">
                <i class="bi bi-credit-card"></i>
            </div>
            <a href="/Expenses" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-4 col-md-6 d-flex">
        <!-- small box -->
        <div class="small-box bg-warning flex-fill">
            <div class="inner">
                <h3>Balance</h3>
                <p>@Model.Balance.ToString("C",new System.Globalization.CultureInfo(Model.culture))</p>
            </div>
            <div class="icon">
                <i class="bi bi-currency-dollar"></i>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Upcoming Payment Reminders</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Reminder Date</th>
                            <th>Description</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reminder in Model.PaymentReminders)
                        {
                            <tr>
                                <td>@reminder.ReminderDate.Value.ToString("d")</td>
                                <td>@reminder.Description</td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Recent Expenses</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Category</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expense in Model.RecentExpenses)
                        {
                            <tr>
                                <td>@expense.ExpenseDate?.ToString("d")</td>
                                <td>@expense.Amount?.ToString("C")</td>
                                <td>@expense.Category</td>
                                <td>@expense.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
